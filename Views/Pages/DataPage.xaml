    mc:Ignorable="d">
    <Grid>
        <ListBox x:Name="DownloadList" Margin="5,55,0,50">
        </ListBox>
        <Button Content="刷新" Height="45" Margin="624,405,0,0" VerticalAlignment="Top" Width="51" Click="Flushed_Click"/>
        <Button Content="安装" Height="45" Margin="685,405,0,0" VerticalAlignment="Top" Width="115" Click="Install_Click" FontSize="20" Background="BlueViolet"/>
    </Grid>
</Page>
